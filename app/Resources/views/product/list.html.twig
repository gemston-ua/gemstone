{% extends 'layout.html.twig' %}

{% block content %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>id</th>
                <th>title</th>
                <th>preview</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.title|slice(0, 20) }}</td>
                    <td>{{ product.description|slice(0, 50) }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock content %}